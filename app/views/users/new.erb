



<div class='container'>

  <% if flash[:message] %>
    <span class="alert alert-danger" role="alert"><%= flash[:message] %></span>
    <br><br>
  <% end %>

  <form method='POST' action='/users/new'>
    <label for='name'>Enter your name:</label>
    <input type='text' name='user[name]' required><br>
    <label for='username'>Enter your username:</label>
    <input type='text' name='user[username]' required><br>
    <label for='email'>Enter your email:</label>
    <input type='email' name='user[email]' required><br>
    <label for='password'>Enter your password:</label>
    <input type='password' name='user[password]' required><br>
    <input type='submit' value='submit' class='btn btn-default'>
  </form>
</div>

