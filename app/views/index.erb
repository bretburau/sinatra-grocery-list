<%=erb :'/partials/header'%>
<div class='container'>
  <% if flash.has?(:message) %>
    <span class="alert alert-danger" role="alert"><%= flash[:message] %></span>
  <% end %>

  <%if session[:user_id]%>
    <h2>Welcome <%=@user.name%>!</h2>
  <%else%>
    <a href='/login'>Click here to log in</a>
  <%end%>

  <form method="POST" action='/logout'>
    <input type='submit' value='Log Out' class='btn-default'>
  </form>
</div>

<%=erb :'partials/footer'%>