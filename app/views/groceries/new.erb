
<div class='container'>
  <h2>Add a new grocery:</h2>

  <% if flash[:message] %>
    <span class="alert alert-danger" role="alert"><%= flash[:message] %></span>
  <% end %>
  <form method='POST' action='/groceries/new'>
  <label for='grocery[name]'>Name:</label>
  <input name='grocery[name]' type='text'><br>
  <label for='grocery[price]'>Price:</label>
  <input name='grocery[price]' type='number' step='0.01'><br>
  <input type='submit' value='Create Grocery' class='btn-default'>
  </form>
</div>
