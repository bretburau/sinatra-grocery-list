
<div class='container'>
  <h2>All Groceries:</h2>

  <% if flash[:message] %>
    <span class="alert alert-danger" role="alert"><%= flash[:message] %></span>
    <br><br>
  <% end %>

  <div class='list-group'>
    <%Grocery.all.each do |grocery|%>
      <a class='list-group-item' href='/groceries/<%=grocery.slug%>'><%=grocery.name%></a>
    <%end%>
  </div>
  <a class='btn btn-default' href='/groceries/new'>Add a new Grocery</a>
</div>
